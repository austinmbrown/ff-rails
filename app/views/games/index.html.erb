<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Kickoff</th>
      <th>Home team</th>
      <th>Away team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.kickoff %></td>
        <td><%= game.home_team.name %></td>
        <td><%= game.away_team.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<% if game.started? %>
  <div class="game game--locked">
    <div class="team <%= 'team--picked' if game.user_pick_team(current_user) == game.away_team %>">
      <div class="team__logo">
        <%= game.away_team.logo_url %>
      </div>
      <div class="team__text-container team__text-container--away">
        <div class="team__text team__text--name">
          <%= game.away_team.name %>
        </div>
        <div class="team__text team__text--score">
          <%= game.away_team_score %>
        </div>
      </div>
    </div>
    <div class="team__spacer"></div>
    <div class="team <%= 'team--picked' if game.user_pick_team(current_user) == game.home_team %>">
      <div class="team__text-container team__text-container--home">
        <div class="team__text team__text--name">
          <%= game.home_team.name %>
        </div>
        <div class="team__text team__text--score">
          <%= game.home_team_score %>
        </div>
      </div>
      <div class="team__logo">
        <%= game.home_team.logo_url %>
      </div>
    </div>
  </div>

<% else %>
  <div class="game game--pickable">
    <% if game.user_pick(current_user) && !game.started? %>
      <% if game.user_pick_team(current_user) == game.away_team %>
        <%= link_to pick_path(game.user_pick(current_user)), method: "delete", class: "team team--picked" do %>
          <div class="team__logo">
            <%= game.away_team.logo_url %>
          </div>
          <div class="team__text-container team__text-container--away">
            <div class="team__text team__text--name">
              <%= game.away_team.name %>
            </div>
            <div class="team__text team__text--score">
            </div>
          </div>
        <% end %>
        <div class="team__spacer"></div>
        <div class="team">
          <div class="team__text-container team__text-container--home">
            <div class="team__text team__text--name">
              <%= game.home_team.name %>
            </div>
            <div class="team__text team__text--score">
            </div>
          </div>
          <div class="team__logo">
            <%= game.home_team.logo_url %>
          </div>
        </div>
      <% elsif game.user_pick_team(current_user) == game.home_team %>
        <div class="team">
          <div class="team__logo">
            <%= game.away_team.logo_url %>
          </div>
          <div class="team__text-container team__text-container--away">
            <div class="team__text team__text--name">
              <%= game.away_team.name %>
            </div>
            <div class="team__text team__text--score">
            </div>
          </div>
        </div>
        <div class="team__spacer"></div>
        <%= link_to pick_path(game.user_pick(current_user)), method: "delete", class: "team team--picked" do %>
          <div class="team__text-container team__text-container--home">
            <div class="team__text team__text--name">
              <%= game.home_team.name %>
            </div>
            <div class="team__text team__text--score">
            </div>
          </div>
          <div class="team__logo">
            <%= game.home_team.logo_url %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <%= link_to picks_path(game_id: game.id, picked_team_id: game.away_team_id), method: "post", class: "team" do %>
        <div class="team__logo">
          <%= game.away_team.logo_url %>
        </div>
        <div class="team__text-container team__text-container--away">
          <div class="team__text team__text--name">
            <%= game.away_team.name %>
          </div>
          <div class="team__text team__text--record">
            <% if game.away_team.wins %>
              <%= game.away_team.wins %>
            <% else %>
              0
            <% end %>
            <% if game.away_team.losses %>
              - <%= game.away_team.losses %>
            <% else %>
              - 0
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="team__spacer"></div>
      <%= link_to picks_path(game_id: game.id, picked_team_id: game.home_team_id), method: "post", class: "team" do %>
        <div class="team__text-container team__text-container--home">
          <div class="team__text team__text--name">
            <%= game.home_team.name %>
          </div>
          <div class="team__text team__text--record">
            <% if game.home_team.wins %>
              <%= game.home_team.wins %>
            <% else %>
              0
            <% end %>
            <% if game.home_team.losses %>
              - <%= game.home_team.losses %>
            <% else %>
              - 0
            <% end %>
          </div>
        </div>
        <div class="team__logo">
          <%= game.home_team.logo_url %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
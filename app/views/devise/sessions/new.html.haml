.l.l-body
  .l.l-paper.l-paper--sign-in
    = form_for(resource, as: resource_name, url: session_path(resource_name), class: "form form--sign-in") do |f|
      .input.input--text-input.input--email
        = f.label :first_name
        = f.text_field :first_name, autofocus: true
      .input.input--text-input.input--password
        = f.label :password
        = f.password_field :password, autocomplete: "off"
      / - if devise_mapping.rememberable?
      /   .input.input--checkbox
      /     = f.check_box :remember_me
      /     = f.label :remember_me
      .button-group.button-group--sign-in.button-group--vertical
        = f.submit "Enter", class: 'button button--app-navigation'
    / = render "devise/shared/links"
